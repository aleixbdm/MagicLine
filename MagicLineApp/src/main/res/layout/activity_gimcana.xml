<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Gimcana"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_gimcana"
        android:id="@+id/titol_Gimcana"
        android:paddingLeft="5dp"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/magicRed"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <View
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/magicRed"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/intro_gimcana"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:id="@+id/intro_gimcana"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:textSize="18dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/intro2_gimcana"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:id="@+id/intro2_gimcana"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:textSize="18dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proves1_gimcana"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:id="@+id/proves_gimcana"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:textSize="18dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proves2_gimcana"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:id="@+id/proves2_gimcana"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:textSize="18dp"
                android:padding="10dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proves3_gimcana"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:id="@+id/proves3_gimcana"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:textSize="18dp"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_size"
                android:layout_marginTop="@dimen/elements_vertical_margin"
                android:layout_marginBottom="@dimen/elements_vertical_margin"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/premis_condicions"
                    android:background="@drawable/button_style"
                    android:textSize="15dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold|italic"
                    android:text="@string/premis_condicions"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/colaboracio"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:id="@+id/colaboracio"
                android:layout_centerVertical="true"
                android:textStyle="normal"
                android:textSize="18dp"
                android:padding="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_petit_exp"
                android:background="@null"
                android:src="@drawable/petit_explorador"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_gran_exp"
                android:background="@null"
                android:src="@drawable/gran_explorador"
                android:adjustViewBounds="false"
                android:scaleType="fitCenter"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
