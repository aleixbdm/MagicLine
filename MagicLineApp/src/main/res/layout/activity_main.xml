<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/magicRed"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/linearlayout1"
        android:layout_marginBottom="@dimen/elements_vertical_margin">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/announcements"
            android:layout_weight="2"
            android:src="@drawable/ic_announcement_white_48dp"
            android:scaleType="fitCenter"
            android:background="@null" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/magiclinetransparencishort"
            android:id="@+id/imageView5"
            android:layout_weight="1.5"
            android:scaleType="centerInside" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/facebook"
            android:src="@drawable/facebook_48"
            android:adjustViewBounds="false"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="2" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/twitter"
            android:src="@drawable/twitter_48"
            android:adjustViewBounds="false"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="2" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/youtube"
            android:src="@drawable/youtube_48"
            android:adjustViewBounds="false"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:orientation="vertical"
        android:background="@null"
        android:layout_marginBottom="@dimen/elements_vertical_margin">

        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/magicRed"
            android:padding="@dimen/padding_noticies">
        </android.support.v4.view.ViewPager>

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/radiogroup">
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/linearlayout2"
        android:layout_marginBottom="@dimen/elements_vertical_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@null">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_style"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/elements_vertical_margin2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button1"
                    android:textSize="@dimen/size_text_buttons"
                    android:text="@string/button1"
                    android:drawableLeft="@mipmap/ic_place_white_48dp"

                    android:padding="@dimen/padding_buttons"
                    android:background="@null"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_style"
                android:layout_marginBottom="@dimen/elements_vertical_margin2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button2"
                    android:textSize="@dimen/size_text_buttons"
                    android:text="@string/button2"
                    android:drawableLeft="@mipmap/ic_palette_white_48dp"
                    android:padding="@dimen/padding_buttons"
                    android:background="@null"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@null">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_style"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/elements_vertical_margin2"
                android:padding="@dimen/padding_buttons">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button3"
                    android:textSize="@dimen/size_text_buttons"
                    android:text="@string/button3"
                    android:textAllCaps="false"
                    android:drawableLeft="@mipmap/ic_tag_faces_white_48dp"
                    android:background="@null" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_style"
                android:layout_marginBottom="@dimen/elements_vertical_margin2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button4"
                    android:textSize="@dimen/size_text_buttons"
                    android:text="@string/button4"
                    android:drawableLeft="@mipmap/ic_call_white_48dp"
                    android:padding="@dimen/padding_buttons"
                    android:background="@null"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/SantJoandeDeu"
            android:textColor="#FFFFFF"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:id="@+id/button5"
            android:background="@null"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/SobreApp"
            android:textColor="#FFFFFF"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:id="@+id/button6"
            android:background="@null"/>

    </LinearLayout>

</LinearLayout>
