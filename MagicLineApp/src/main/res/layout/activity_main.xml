<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="@dimen/elements_vertical_margin"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/announcements"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/attention" />

        <TextView
            android:id="@+id/titol_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.4"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="@string/titol_app"
            android:textColor="@color/magicRed"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:adjustViewBounds="false"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/facebook" />

        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:adjustViewBounds="false"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/twitter" />

        <ImageButton
            android:id="@+id/instagram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:adjustViewBounds="false"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/instagram" />

        <ImageButton
            android:id="@+id/youtube"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:adjustViewBounds="false"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/emergency_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:orientation="vertical"
        android:background="@null"
        android:layout_marginBottom="@dimen/elements_vertical_margin">

        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/padding_noticies">
        </android.support.v4.view.ViewPager>

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/radiogroup">
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/linearlayout2"
        android:layout_marginBottom="@dimen/elements_vertical_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@null">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/white_button_style"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/elements_vertical_margin2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button1"
                    android:textSize="@dimen/size_text_buttons"
                    android:textColor="@color/white"
                    android:text="@string/button1"
                    android:drawableLeft="@drawable/white_map_icon"
                    android:padding="@dimen/padding_buttons"
                    android:background="@null"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_style"
                android:layout_marginBottom="@dimen/elements_vertical_margin2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button2"
                    android:textSize="@dimen/size_text_buttons"
                    android:textColor="@color/magicRed"
                    android:text="@string/button2"
                    android:drawableLeft="@drawable/museum_icon"
                    android:padding="@dimen/padding_buttons"
                    android:background="@null"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@null">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_style"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/elements_vertical_margin2"
                android:padding="@dimen/padding_buttons">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button3"
                    android:textSize="@dimen/size_text_buttons"
                    android:textColor="@color/magicRed"
                    android:text="@string/button3"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/music_icon"
                    android:background="@null" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="@drawable/button_style"
                android:layout_marginBottom="@dimen/elements_vertical_margin2">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button4"
                    android:textSize="@dimen/size_text_buttons"
                    android:textColor="@color/magicRed"
                    android:text="@string/button4"
                    android:drawableLeft="@drawable/picnic_icon"
                    android:padding="@dimen/padding_buttons"
                    android:background="@null"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/SantJoandeDeu"
            android:textColor="@color/magicRed"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:id="@+id/button5"
            android:background="@null"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/SobreApp"
            android:textColor="@color/magicRed"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:id="@+id/button6"
            android:background="@null"/>

    </LinearLayout>

</LinearLayout>
