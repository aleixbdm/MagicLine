<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.marionacaros.magicline.InfoActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewInfo1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/magicRed"
                    android:text="Benvinguts\na la Barcelona Magic Line 2016"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="22dp"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/buttonInfo2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/textViewInfo"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="@string/InfoMagicLine"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="18dp"
                    android:textIsSelectable="false"
                    android:layout_below="@+id/textViewInfo1"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO T'HO PERDIS!"
                    android:id="@+id/buttonInfo2"
                    android:textSize="25dp"
                    android:textColor="@color/magicRed"
                    android:textStyle="bold|italic"
                    android:background="@drawable/redborder"
                    android:layout_below="@+id/textView_SantJoandeDeu"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-> Descobreix Montjuïc"
                    android:id="@+id/buttonmontjuic"
                    android:textColor="#000000"
                    android:textStyle="bold|italic"
                    android:background="#ffffff"
                    android:layout_below="@+id/textViewInfo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-> Estadi Olímpic"
                    android:id="@+id/buttonestadi"
                    android:textColor="#000000"
                    android:textStyle="bold|italic"
                    android:background="#ffffff"
                    android:layout_below="@+id/buttonmontjuic"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-> Zona de pícnic"
                    android:id="@+id/buttonespai"
                    android:textColor="#000000"
                    android:textStyle="bold|italic"
                    android:background="#ffffff"
                    android:layout_below="@+id/buttonestadi"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-> Festa Magic Line"
                    android:id="@+id/buttonfesta"
                    android:textColor="#000000"
                    android:textStyle="bold|italic"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/buttonespai"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />




            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
