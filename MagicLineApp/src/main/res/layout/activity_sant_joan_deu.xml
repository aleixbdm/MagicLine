    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.marionacaros.magicline.SantJoanDeu"-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SantJoanDeu"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_height="match_parent"
            app:srcCompat="@drawable/return_icon"
            android:id="@+id/returnButton"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:background="#00ffffff"
            android:background="@drawable/return_icon"
            android:layout_width="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titol_SantJoan"
            android:id="@+id/titol_ObraSocial"
            android:paddingLeft="5dp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/magicRed"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/magicRed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_SJD"
            android:background="@null"
            android:src="@drawable/noti_web_generic"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:paddingTop="20dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:text= "@string/text_SantJoan"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/textview_ObraSocial"
        android:layout_centerVertical="true"
        android:textStyle="normal"
        android:textSize="18dp"
        android:padding="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/button_soci"
            android:background="@drawable/button_style_2"
            android:textColor="@color/magicRed"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:text="@string/pagina_web"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"/>

    </LinearLayout>



</LinearLayout>
